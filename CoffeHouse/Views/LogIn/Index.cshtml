
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coffe House</title>
    <link rel="stylesheet" href="./fontawesome-free-6.5.2-web/css/all.min.css">
    @*<link rel="stylesheet" href="Coffe.css">*@
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-image: url('login.png');
            background-size: 100% 100%;
            background-repeat: no-repeat;
            background-position: center center;
        }

        .label-title {
            display: flex;
            justify-content: center;
            font-size: 24px;
            font-family: 'Times New Roman', Times, serif;
        }

        form {
            height: 400px;
            background-color: white;
            display: block;
            justify-content: center;
            align-items: center;
        }

        .form {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .Form-Login {
            width: 300px;
            padding: 20px;
            background-color: #f1f1f1;
            border-radius: 8px;
            margin: auto;
            position: relative;
            z-index: 1;
        }

            .Form-Login label {
                display: inline-block;
                width: 100px;
                margin-right: 10px;
            }

        .RAF {
            display: flex;
            margin-top: 10px;
        }

        .Forget {
            margin-left: 20px;
        }

        .RememberCheckbox {
            cursor: pointer;
        }

        .LoginButton {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
            bottom: 70px;
            left: 180px;
        }

            .LoginButton:hover {
                background-color: #45a049;
            }

        .FB {
            width: 100px;
        }

            .FB:hover {
                background-color: #45a049;
                color: white;
            }

        .Gmail {
            margin-left: 32px;
            width: 100px;
        }

            .Gmail:hover {
                background-color: #45a049;
                color: white;
            }

        .Register {
            margin-top: 10px;
            width: 237px;
            display: flex;
            align-self: center;
            justify-content: center;
        }

        .circle {
            display: flex;
            justify-content: center;
            margin-top: 0px;
            position: relative;
            bottom: 20px;
        }

        .Or {
            border-radius: 50%;
            color: white;
            display: flex;
            justify-content: center;
            width: 50px;
            height: 45px;
            align-items: center;
            border: solid 2px #45a049;
            background-color: #45a049;
        }

        .Register:hover {
            background-color: #45a049;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <form class="Form-Login">
                <p class="label-title">Log in</p><br>
                <label>User name</label>
                <input class="UserName" type="text" name="UserName"><br>
                <label>Password</label>
                <input type="password" id="password" name="password"><br>
                <div class="RAF">
                    <input type="checkbox" class="RememberCheckbox" name="Remember">
                    <span>Remember me</span>
                    <p class="Forget"><a href="#">Forget Password?</a></p>
                </div>
                <button class="LoginButton" type="submit">Login</button>
                <div class="circle">
                    <div class="Or">Or</div>
                </div>
                <div class="Social">
                    <button class="FB"><i class="fa-brands fa-facebook" style="color: blue; margin-right: 5px;"></i>FaceBook</button>
                    <button class="Gmail"><i class="fa-solid fa-envelope" style="color: #63E6BE;margin-right: 5px;"></i>Gmail</button>
                    <button class="Register">Register Now</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
